{
  "name": "@maistro/bookings-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:server": "TS_NODE_PROJECT=tsconfig.json webpack --config ./config/webpack/webpack.server.ts",
    "build:dev-server": "TS_NODE_PROJECT=tsconfig.json webpack --config ./config/webpack/webpack.devServer.ts",
    "build:browser": "TS_NODE_PROJECT=tsconfig.json webpack --config ./config/webpack/webpack.browser.ts",
    "build:browser:dev": "TS_NODE_PROJECT=tsconfig.json webpack --env NODE_ENV=development --config ./config/webpack/webpack.browser.ts",
    "clean": "rm -rf dist && rm -rf dist-server",
    "build": "npm run build:browser && npm run build:server",
    "dev": "npm run build:browser:dev && npm run build:dev-server && ts-node ./dist-dev-server",
    "test": "jest",
    "test:watch": "jest --watch --no-coverage",
    "test:coverage": "jest --coverage",
    "format": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,css}'",
    "format:fix": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css}'"
  },
  "devDependencies": {
    "@maistro/prettier-config": "*",
    "@babel/core": "^7.28.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@maistro/ui": "*",
    "@types/jest": "^30.0.0",
    "@types/react-helmet": "^6.1.11",
    "@types/webpack-stats-plugin": "^0.3.5",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^7.8.2",
    "sass": "^1.90.0",
    "sass-loader": "^16.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-stats-plugin": "^1.1.3"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.11.0"
  }
}
